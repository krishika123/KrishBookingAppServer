@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}





<div id="main-wrapper" class="oxyy-login-register">
    <div class="container-fluid px-0">
        <div class="row no-gutters min-vh-100">
            <!-- Register Form
            ========================= -->
            <div class="col-md-6 d-flex flex-column align-items-center order-2 order-md-1">
                <div class="container pt-5">
                    <div class="row">
                        <div class="col-11 col-md-10 mx-auto">
                            <p class="text-right text-2 text-muted font-weight-300">Already a member? <a class="btn-link font-weight-300" href="~/grants">Sign in now</a></p>
                        </div>
                    </div>
                </div>
                <div class="container my-auto py-5">
                    <div class="row">
                        <div class="col-11 col-md-10 col-lg-9 col-xl-8 mx-auto">
                            <h3 class="font-weight-300 text-6 mb-4">Sign up</h3>
                            <span id="verificationSteps">Verification 1/2</span>
                            <div class="progress mb-4">
                                <div id="progressBar" class="progress-bar progress-bar-striped " role="progressbar" style="width:1%" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" autocomplete="off">
                                <div id="step1" class="animate__animated">

                                    <div id="ghanaCardVerificationView">

                                        <div class="form-group font-weight-300">
                                            <label for="loginPassword">Ghana Card Number</label>
                                            <input asp-for="Input.GhanaCardNumber" type="text" class="form-control bg-light border-light" id="ghanaCardNumber" required placeholder="Enter Your Ghana Card Number">
                                            <span id="ghanarequired" class="text-danger"></span>
                                            @*<span asp-validation-for="Input.GhanaCardNumber" id="ghanarequired" class="text-danger"></span>*@
                                        </div>

                                        <div class="form-group font-weight-300" id="dobInput" hidden>
                                            <label for="loginPassword" class="mt-3">Mother Maiden Name</label>
                                            <input type="text" class="form-control form-control-sm bg-light border-light" id="dob" required placeholder="Enter Your Mother Maiden Name">
                                            <span id="dobrequired" class="text-danger"></span>
                                        </div>

                                        <div class="form-group font-weight-300 mt-0">
                                            <button class="btn btn-sm btn-warning shadow-none font-weight-400 my-4" type="button" id="">Clear</button>
                                            <button class="btn btn-sm btn-primary shadow-none font-weight-400 my-4" type="button" style="float:right" id="goToDobViewBtn">Next</button>

                                            <button hidden class="btn btn-sm btn-primary shadow-none font-weight-400 my-4" type="button" id="verificationBtn" style="float:right">Next</button>
                                        </div>



                                    </div>

                                    <div id="dobVerificationView" hidden>

                                        @*<div class="form-group font-weight-300">
                                                <label for="loginPassword">Birth Date</label>
                                                <input asp-for="Input.GhanaCardNumber" type="date" class="form-control bg-light border-light" id="dob" required placeholder="Enter Your Birth Date">
                                                <span id="dobrequired" class="text-danger"></span>
                                            </div>*@


                                        <!--<div class="form-group font-weight-300 mt-4">
                                        <button class="btn btn-sm btn-info shadow-none font-weight-400 my-4" type="button" id="backToGhanaCardViewBtn">Back</button>
                                        <button class="btn btn-primary shadow-none font-weight-400 my-4" type="button"  id="verificationBtn" style="float:right">Next</button>-->
                                        @* <button class="btn btn-dark shadow-none font-weight-400 my-4" type="button" id="thirdStepBtn" style="float:right">Next</button>*@
                                        <!--</div>-->

                                    </div>

                                    <div id="ghanaCardConfirmView" hidden>
                                        <h4 class="font-weight-300 text-4 mb-2">Personal Details</h4>
                                        <div class="form-group font-weight-300">
                                            <label>Name</label>
                                            <input disabled type="text" class="form-control form-control-sm bg-light border-light" id="fullName" required placeholder="Enter Your First Name">

                                        </div>
                                        <div class="form-group font-weight-300">
                                            <label hidden asp-for="Input.FirstName">First Name</label>
                                            <input hidden type="text" class="form-control bg-light border-light" asp-for="Input.FirstName" id="firstName" required placeholder="Enter Your First Name">
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group font-weight-300">
                                            <label hidden asp-for="Input.LastName"></label>
                                            <input hidden asp-for="Input.LastName" class="form-control bg-light border-light" id="lastName" placeholder="Enter Your Last Name" />
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>

                                        </div>
                                        <div class="form-group font-weight-300" hidden>
                                            <label hidden asp-for="Input.GhanaCardNumber"></label>
                                            <input hidden asp-for="Input.GhanaCardNumber" class="form-control bg-light border-light" id="lastName" placeholder="Enter Your Last Name" />
                                            <span asp-validation-for="Input.GhanaCardNumber" class="text-danger"></span>

                                        </div>
                                        <div class="form-group font-weight-300">
                                            <label asp-for="Input.PhoneNumber" class="mt-3">Phone Number</label>
                                            <input asp-for="Input.PhoneNumber" id="phoneNumber" class="form-control bg-light border-light" placeholder="Enter Your Phone Number" />
                                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                                        </div>
                                        <div class="form-group font-weight-300">
                                            <label asp-for="Input.Email" class="mt-3">Email</label>
                                            <input asp-for="Input.Email" class="form-control bg-light border-light" placeholder="Enter Your Email" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                                        </div>

                                        @*<div class="form-group font-weight-300">
                                                <label for="loginPassword" class="mt-3">Password</label>
                                                <input asp-for="Input.Password" type="password" id="password" class="form-control bg-light border-light" required placeholder="Enter Your Password">
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>

                                            <div class="form-group font-weight-300">
                                                <label for="loginPassword" class="mt-3">Confirm Password</label>
                                                <input asp-for="Input.ConfirmPassword" id="passwordConfirm" type="password" class="form-control bg-light border-light" required placeholder="Confirm Password">
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                            </div>*@


                                        <button class="btn btn-sm btn-primary btn-block shadow-none font-weight-400 my-4" type="button" id="fistStepBtn">Next</button>

                                    </div>






                                </div>



                                <div id="step2" class="animate__animated" hidden>
                                    <h5 class="font-weight-300 text-4 mb-2">Business Details</h5>

                                    <div class="form-group font-weight-300">
                                        <label asp-for="Input.BusinessTIN">TIN / Ghana Card Number</label>
                                        <input asp-for="Input.BusinessTIN" type="text" class="form-control bg-light border-light" id="tinGHCard" required placeholder="Enter Your TIN or Ghana card number">
                                        <span asp-validation-for="Input.BusinessTIN" id="bussinessTinOrGhCard" class="text-danger"></span>
                                    </div>
                                    <div class="form-group font-weight-300">
                                        <label asp-for="Input.BusinessName" class="mt-3"></label>
                                        <input asp-for="Input.BusinessName" type="text" class="form-control bg-light border-light" id="emailAddress" required placeholder="Enter Business Name">
                                        <span asp-validation-for="Input.BusinessName" class="text-danger"></span>
                                    </div>

                                    @*<div class="form-group font-weight-300">
                                            <label asp-for="Input.BusinessRegistrationNumber"></label>
