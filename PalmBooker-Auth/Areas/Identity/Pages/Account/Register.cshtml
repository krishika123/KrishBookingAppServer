                                            <span asp-validation-for="Input.BusinessRegistrationNumber" class="text-danger"></span>
                                        </div>*@

                                    @*<div class="form-group font-weight-300">
                                            <label asp-for="Input.BusinessType">Business Type</label>
                                            <input asp-for="Input.BusinessType" type="text" class="form-control bg-light border-light" required placeholder="Enter Business Type">
                                            <span asp-validation-for="Input.BusinessType" class="text-danger"></span>
                                        </div>*@



                                    <div class="form-group font-weight-300">
                                        <label asp-for="Input.BusinessPhoneNumber" class="mt-3"></label>
                                        <input asp-for="Input.BusinessPhoneNumber" type="tel" class="form-control bg-light border-light" required placeholder="Enter Your Business Phone Number">
                                        <span asp-validation-for="Input.BusinessPhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group font-weight-300">
                                        <label asp-for="Input.BusinessEmail" class="mt-3"></label>
                                        <input asp-for="Input.BusinessEmail" type="email" class="form-control bg-light border-light" required placeholder="Enter Your Email">
                                        <span asp-validation-for="Input.BusinessEmail" class="text-danger"></span>
                                    </div>

                                    <div class="form-group font-weight-300 mt-0">
                                        <button class="btn btn-sm btn-warning shadow-none font-weight-400 my-4" type="button" id="backStepBtn">Back</button>
                                        <button class="btn btn-sm btn-primary shadow-none font-weight-400 my-4" type="button" id="secStepBtn" style="float:right">Next</button>
                                    </div>

                                </div>

                                <div id="step3" class="animate__animated" hidden>
                                    <h5 class="font-weight-300 text-4 mb-2">Password</h5>
                                    @*<div class="form-group font-weight-300">
                                            <label asp-for="Input.BusinessAddress"></label>
                                            <input asp-for="Input.BusinessAddress" type="text" class="form-control bg-light border-light" id="fullName" required placeholder="Enter Your Address">
                                            <span asp-validation-for="Input.BusinessAddress" class="text-danger"></span>
                                        </div>*@
                                    <div class="form-group font-weight-300">
                                        <label for="loginPassword" class="mt-3">Password</label>
                                        <input asp-for="Input.Password" type="password" id="password" class="form-control bg-light border-light" required placeholder="Enter Your Password">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group font-weight-300">
                                        <label for="loginPassword" class="mt-3">Confirm Password</label>
                                        <input asp-for="Input.ConfirmPassword" id="passwordConfirm" type="password" class="form-control bg-light border-light" required placeholder="Confirm Password">
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>


                                    <div class="form-group font-weight-300 mt-0">
                                        <button class="btn btn-sm btn-warning shadow-none font-weight-400 my-4" type="button" id="backStepBtn2">Back</button>
                                        <button class="btn btn-sm btn-primary shadow-none font-weight-400 my-4" type="submit" id="submit" style="float:right">Submit</button>
                                        @* <button class="btn btn-dark shadow-none font-weight-400 my-4" type="button" id="thirdStepBtn" style="float:right">Next</button>*@
                                    </div>





                                </div>

                                @*<div id="step4" class="animate__animated" hidden>
                                        <h5 class="font-weight-300 text-4 mb-2">Password</h5>
                                        <div class="form-group font-weight-300">
                                            <label asp-for="Input.Password">Password</label>
                                            <input asp-for="Input.Password" type="password" class="form-control bg-light border-light" required placeholder="Enter Your Password">
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>

                                        <div class="form-group font-weight-300">
                                            <label asp-for="Input.ConfirmPassword" for="confirmPassword">Confirm Password</label>
                                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control bg-light border-light" required placeholder="Confirm Password">
                                        </div>

                                        <div class="form-group font-weight-300 mt-4">
                                            <button class="btn btn-dark shadow-none font-weight-400 my-4" type="button" id="backStepBtn3">Back</button>
                                            <button class="btn btn-dark shadow-none font-weight-400 my-4" type="submit" id="submit" style="float:right">Submit</button>
                                        </div>


                                    </div>*@



                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Register Form End -->
            <!-- Welcome Text
            ========================= -->
            <div class="col-md-6  order-1 bg-light order-md-2" style="        background-repeat: no-repeat;
        background-size: 40% !important;
        background-image: url('@Url.Content("~/admin/assets/book2.png")');
        background-size: contain;
        background-position-y: center;
        background-position-x: center;
        padding: 0 !important;
        margin: 0 !important;">
                <div class="container h-100 d-flex flex-column">
                    <div class="row no-gutters">
                        <div class="col-11 col-md-10 mx-auto">
                            @*<div class="logo mt-5 mb-5 mb-md-0"> <a class="d-flex" href="index.html" title="Oxyy"><img src="" alt="Logo here"></a> </div>*@
                        </div>
                    </div>
                    <div class="row no-gutters my-auto">
                        <div class="col-11 col-md-10 mx-auto">
                            @* <h1 class="text-13 font-weight-300 mb-4">Join the largest Designer community in the world.</h1>*@

                        </div>
                    </div>
                </div>
            </div>
            <!-- Welcome Text End -->
        </div>
    </div>
</div>




























